<div>
    <div class="container py-5">

        <h1>Listado de productos <span style="font-size: 16px;">(desde handlebars backend)</span></h1>

        {{#if hayProductos}}
        <div class="table-responsive">

            <table class="table table-dark align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th> {{ this.id }} </th>
                        <td> {{ this.title }} </td>
                        <td> $ {{ this.price }} </td>
                        <td> <img src="{{ this.thumbnail }}" width="50" height="50"> </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>

        {{else}}
        <div class="alert alert-info">
            <h5 class="alert-heading">No hay productos cargados</h5>
        </div>
        {{/if}}

    </div>

</div>