<div>
    <div class="container py-5">

        <div class="card">

            <div class="card-header">
                <h1>Agregar Producto</h1>
            </div>

            <div class="card-body">

                <form action="/api/products" method="post">

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-2 col-form-label" for="title">Nombre de Producto</label>
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="text" name="title"
                                placeholder="ej: Tablet Samsung 7 pulgadas">
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-2 col-form-label" for="title">Precio</label>
                        <div class="col-sm-2">
                            <input class="form-control form-control-sm" type="number" step="0.01" name="price">
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-2 col-form-label" for="title">Imagen (url)</label>
                        <div class="col-sm-6">
                            <input class="form-control form-control-sm" type="text" name="thumbnail"
                                placeholder="ej: https://image.com">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>

                </form>

            </div>

        </div>

    </div>

</div>